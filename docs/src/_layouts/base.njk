<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% if title %}{{ title }} - {% endif %}PSD to Phaser Documentation</title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Prism CSS for syntax highlighting - using a minimal theme -->
    <link href="https://cdn.jsdelivr.net/npm/prismjs@1.29.0/themes/prism-tomorrow.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="/css/main.css" rel="stylesheet">
    <!-- Ace Editor CSS -->
    <style>
        .ace-editor {
            min-height: 200px;
            border: 1px solid #ddd;
            border-radius: 4px;
            margin-bottom: 10px;
        }
        .code-editor-container {
            position: relative;
        }
        .phaser-container {
            max-width: 100%;
            overflow: hidden;
        }
        .layer-structure ul {
            list-style: none;
            padding-left: 20px;
            margin-bottom: 0;
        }
        .layer-structure ul:first-child {
            padding-left: 0;
        }
        .layer-structure li {
            margin: 2px 0;
            padding: 2px 4px;
            border-radius: 3px;
            font-family: 'Courier New', monospace;
            font-size: 14px;
        }
        .layer-group {
            font-weight: bold;
        }
        .layer-path {
            font-size: 12px;
            color: #666;
            margin-left: 10px;
        }
        .layer-category {
            font-weight: bold;
            color: #0066cc;
        }
        .layer-category-name {
            font-size: 11px;
            color: #666;
            font-weight: normal;
        }
        .layer-actual-name {
            color: #333;
            font-weight: 500;
        }
        .layer-type {
            color: #333;
        }
        .layer-attributes {
            color: #198754;
            font-size: 12px;
        }
        
        /* Layout improvements */
        .sidebar {
            padding: 20px;
            position: fixed;
            top: 0;
            left: 0;
            width: 250px;
            height: 100vh;
            overflow-y: auto;
        }
        
        main {
            margin-left: 250px;
            max-width: 1000px;
            padding: 20px;
        }
        
        /* Responsive layout for narrow screens */
        @media (max-width: 1000px) {
            .interactive-example .row {
                flex-direction: column;
            }
            .interactive-example .col-8,
            .interactive-example .col-4 {
                flex: 0 0 100%;
                max-width: 100%;
                width: 100%;
            }
            .interactive-example .ace-editor,
            .interactive-example .phaser-container {
                width: 100%;
            }
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <!-- Sidebar Navigation -->
        <nav class="bg-light sidebar">
                <div class="position-sticky pt-3">
                    <div class="mb-3">
                        <h5 class="text-primary">PSD to Phaser</h5>
                    </div>
                    
                    {% for section in navigation.sections %}
                    <div class="mb-3">
                        <h6 class="sidebar-heading text-muted">{{ section.title }}</h6>
                        <ul class="nav flex-column">
                            {% for item in section.items %}
                            <li class="nav-item">
                                <a class="nav-link {% if page.fileSlug == item.file %}active{% endif %}" 
                                   href="{{ item.url }}">
                                    {{ item.title }}
                                </a>
                            </li>
                            {% endfor %}
                        </ul>
                    </div>
                    {% endfor %}
                </div>
        </nav>

        <!-- Main Content -->
        <main>
                <header class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2">{{ title or "PSD to Phaser Documentation" }}</h1>
                    <div class="btn-toolbar mb-2 mb-md-0">
                        <a href="https://github.com/laffan/psd-to-phaser" class="btn btn-outline-secondary btn-sm">
                            <svg class="me-1" width="16" height="16" fill="currentColor">
                                <use xlink:href="#github"/>
                            </svg>
                            GitHub
                        </a>
                    </div>
                </header>

                <div class="content">
                    {{ content | safe }}
                </div>
        </main>
    </div>

    <!-- SVG Icons -->
    <svg xmlns="http://www.w3.org/2000/svg" style="display: none;">
        <symbol id="github" viewBox="0 0 16 16">
            <path d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"/>
        </symbol>
    </svg>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Ace Editor -->
    <script src="https://cdn.jsdelivr.net/npm/ace-builds@1.32.0/src-noconflict/ace.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/ace-builds@1.32.0/src-noconflict/mode-javascript.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/ace-builds@1.32.0/src-noconflict/theme-github.js"></script>
    <!-- Phaser -->
    <script src="https://cdn.jsdelivr.net/npm/phaser@3.80.0/dist/phaser.min.js"></script>
    
    <!-- PSD to Phaser -->
    <script src="/js/psd-to-phaser.min.js"></script>
    <script>
      // Debug: Check if PsdToPhaserPlugin is loaded (UMD export name)
      if (typeof window.PsdToPhaserPlugin !== 'undefined') {
        console.log('PsdToPhaserPlugin loaded successfully:', window.PsdToPhaserPlugin);
      } else {
        console.error('PsdToPhaserPlugin not found on window object');
        // Try different possible names
        console.log('Available on window:', Object.keys(window).filter(key => key.toLowerCase().includes('psd')));
      }
    </script>
    
    <!-- Prism.js for syntax highlighting -->
    <script src="https://cdn.jsdelivr.net/npm/prismjs@1.29.0/components/prism-core.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/prismjs@1.29.0/plugins/autoloader/prism-autoloader.min.js"></script>
    
    <!-- Interactive Examples -->
    <script src="/js/interactive.js"></script>
</body>
</html>